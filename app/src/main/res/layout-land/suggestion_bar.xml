<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggestion_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/suggestion_bar_height_land"
    android:background="@color/suggestion_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="@dimen/suggestion_bar_padding_top"
    android:paddingBottom="@dimen/suggestion_bar_padding_bottom"
    android:visibility="visible">

    <ImageButton
        android:id="@+id/btnArrowDown"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/suggestion_bar_button_size"
        android:layout_height="@dimen/suggestion_bar_button_size"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_down" />

    <ImageButton
        android:id="@+id/btnArrowUp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/suggestion_bar_button_size"
        android:layout_height="@dimen/suggestion_bar_button_size"
        android:layout_marginStart="4dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_up" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="@color/primaryBlue"
        android:textSize="@dimen/suggestion_bar_text_size" />
</LinearLayout>