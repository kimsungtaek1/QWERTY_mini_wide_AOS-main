<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 아래쪽 그림자 효과 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#40000000"
                android:angle="270"
                android:centerY="0.7" />
            <corners android:radius="8dp" />
            <padding android:bottom="3dp" />
        </shape>
    </item>
    
    <!-- 말풍선 본체 -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="0.3dp"
                android:color="#F0F0F0" />
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" />
        </shape>
    </item>
    
    <!-- 말풍선 꼬리 (순수한 흰색) -->
    <item
        android:gravity="bottom|center_horizontal"
        android:bottom="-8dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="12dp"
                    android:height="12dp" />
                <solid android:color="#FFFFFF" />
            </shape>
        </rotate>
    </item>
    
    <!-- 꼬리 양쪽에 그림자 효과 -->
    <item
        android:gravity="bottom|center_horizontal"
        android:bottom="-8dp"
        android:left="1dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="11dp"
                    android:height="11dp" />
                <solid android:color="#00000000" />
                <stroke
                    android:width="0.3dp"
                    android:color="#F0F0F0" />
            </shape>
        </rotate>
    </item>
    
    <!-- 꼬리의 윗부분을 가리는 흰색 사각형 -->
    <item
        android:gravity="bottom|center_horizontal"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <size
                android:width="14dp"
                android:height="5dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>