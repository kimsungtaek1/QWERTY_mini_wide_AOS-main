<?xml version="1.0" encoding="utf-8"?>
<!-- root 는 CustomKeyboardView 에 의해 inflate 됩니다 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_bg">

    <!-- 키보드 영역을 감싸는 LinearLayout - 여기에 패딩 적용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/keyboard_horizontal_padding"
        android:paddingEnd="@dimen/keyboard_horizontal_padding">

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <!-- 2) 한글 자음 행 -->
    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />
        <!-- altText: 대체자음, mainText: 실제문자, keyStyle: white/grey -->
        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/key_background_selector"
            app:keyStyle="white"
            app:lt_Text="ㅍ"
            app:mainText="ㅂ" />
        <!-- 16dp 폭의 여백 -->
        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅊ"
            app:mainText="ㅈ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅌ"
            app:mainText="ㄷ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅋ"
            app:mainText="ㄱ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text=""
            app:mainText="ㅅ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅛ"
            app:mainText="ㅗ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅕ"
            app:mainText="ㅏ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />


        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㅣ" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <!-- 3) 한글 모음 행 -->
    <LinearLayout
        android:id="@+id/second_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㅁ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㄴ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㅇ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㄹ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㅎ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅠ"
            app:mainText="ㅜ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:lt_Text="ㅕ"
            app:mainText="ㅓ" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:keyStyle="white"
            app:mainText="ㅡ" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <!-- 4) 하단 모드/스페이스/엔터 행 -->
    <LinearLayout
        android:id="@+id/funtion_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="10"
            app:icon="@drawable/ic_shift"
            app:keyStyle="grey" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />


        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="10"
            app:keyStyle="grey"
            app:mainText="123" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            app:keyStyle="white"
            app:mainText="Space" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8"
            app:icon="@drawable/ic_enter"
            app:keyStyle="grey" />

        <Space
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.qwerty_mini_wide.app.keyboard.CustomKeyButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="10"
            app:icon="@drawable/ic_backspace"
            app:keyStyle="grey" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Space
        android:id="@+id/space_below_keyboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_bottom_space" />
        
    </LinearLayout>
    <!-- 키보드 영역 끝 -->
    
</LinearLayout>
